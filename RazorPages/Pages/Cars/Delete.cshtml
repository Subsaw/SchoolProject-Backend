@page
@model RazorPages.Pages.Cars.DeleteModel

<h2>Delete Car</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Car</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Model</dt>
        <dd class="col-sm-10">@Model.Car.Model</dd>
        <dt class="col-sm-2">Year</dt>
        <dd class="col-sm-10">@Model.Car.Year</dd>
        <dt class="col-sm-2">License Plate</dt>
        <dd class="col-sm-10">@Model.Car.LicensePlate</dd>
        <dt class="col-sm-2">Daily Rate</dt>
        <dd class="col-sm-10">@Model.Car.DailyRate</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Car.Status</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Car.CarId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
