@page "{id:guid}"
@model RazorPages.Pages.Rentals.DetailsModel

<h2>Rental Details</h2>

<div>
    <h4>Rental</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.Rental.StartDate.ToShortDateString()</dd>
        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model.Rental.EndDate.ToShortDateString()</dd>
        <dt class="col-sm-2">Total Cost</dt>
        <dd class="col-sm-10">@Model.Rental.TotalCost</dd>
        <dt class="col-sm-2">Customer</dt>
        <dd class="col-sm-10">@Model.Rental.Customer.FirstName @Model.Rental.Customer.LastName</dd>
        <dt class="col-sm-2">Car</dt>
        <dd class="col-sm-10">@Model.Rental.Car.Model</dd>
    </dl>
    <a asp-page="./Edit" asp-route-id="@Model.Rental.RentalId" class="btn btn-primary">Edit</a>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>
