@page
@model RazorPages.Pages.Rentals.CreateModel

<h2>Create Rental</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Rental.StartDate"></label>
        <input asp-for="Rental.StartDate" class="form-control" />
        <span asp-validation-for="Rental.StartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rental.EndDate"></label>
        <input asp-for="Rental.EndDate" class="form-control" />
        <span asp-validation-for="Rental.EndDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rental.TotalCost"></label>
        <input asp-for="Rental.TotalCost" class="form-control" />
        <span asp-validation-for="Rental.TotalCost" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rental.CustomerId"></label>
        <input asp-for="Rental.CustomerId" class="form-control" />
        <span asp-validation-for="Rental.CustomerId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rental.CarId"></label>
        <input asp-for="Rental.CarId" class="form-control" />
        <span asp-validation-for="Rental.CarId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
