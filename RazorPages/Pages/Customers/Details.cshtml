@page "{id:guid}"
@model RazorPages.Pages.Customers.DetailsModel

<h2>Customer Details</h2>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Model.Customer.FirstName</dd>
        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Model.Customer.LastName</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Customer.Email</dd>
        <dt class="col-sm-2">Phone Number</dt>
        <dd class="col-sm-10">@Model.Customer.PhoneNumber</dd>
        <dt class="col-sm-2">Date Of Birth</dt>
        <dd class="col-sm-10">@Model.Customer.DateOfBirth</dd>
        <dt class="col-sm-2">Driver License Number</dt>
        <dd class="col-sm-10">@Model.Customer.DriverLicenseNumber</dd>
    </dl>
    <a asp-page="./Edit" asp-route-id="@Model.Customer.CustomerId" class="btn btn-primary">Edit</a>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>
